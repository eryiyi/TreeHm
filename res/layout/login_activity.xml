<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/mm_main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@color/mm_top_bg"
                    android:layout_height="@dimen/top_title_height">
        <TextView android:layout_width="wrap_content"
                  android:text="花木通登录"
                  android:drawablePadding="8dp"
                  android:textSize="16sp"
                  android:layout_centerInParent="true"
                  android:padding="6dp"
                  android:textColor="@color/white"
                  android:layout_centerVertical="true"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/logo"
                   android:visibility="gone"
                   android:layout_marginTop="25dp"
                   android:layout_gravity="center"
                   android:layout_height="wrap_content"/>

        <EditText android:layout_width="match_parent"
                  android:layout_marginLeft="25dp"
                  android:layout_marginRight="25dp"
                  android:layout_marginTop="25dp"
                  android:paddingLeft="15dp"
                  android:drawablePadding="8dp"
                  android:textSize="14sp"
                  android:id="@+id/mobile"
                  android:singleLine="true"
                  android:hint="您的手机号"
                  android:drawableLeft="@drawable/login_user"
                  android:background="@drawable/login_edit_bg"
                  android:layout_height="wrap_content">
        </EditText>
        <EditText android:layout_width="match_parent"
                  android:layout_marginLeft="25dp"
                  android:layout_marginRight="25dp"
                  android:layout_marginTop="25dp"
                  android:paddingLeft="15dp"
                  android:drawablePadding="8dp"
                  android:textSize="14sp"
                  android:hint="密码"
                  android:id="@+id/password"
                  android:singleLine="true"
                  android:password="true"
                  android:drawableLeft="@drawable/login_pwr"
                  android:background="@drawable/login_edit_bg"
                  android:layout_height="wrap_content">
        </EditText>

        <Button android:layout_width="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:text="登  录"
                android:textSize="16sp"
                android:onClick="sureLogin"
                android:textColor="@color/white"
                android:background="@drawable/login_btn_bg"
                android:layout_height="wrap_content"/>

        <TextView android:layout_width="match_parent"
                  android:padding="8dp"
                  android:id="@+id/btn_kf"
                  android:layout_marginTop="20dp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:textSize="16sp"
                  android:textColor="@color/mm_btn_bg"
                  android:text="联系客服：13181038186"
                  android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="25dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:padding="8dp"
                  android:text="立即注册"
                  android:id="@+id/reg"
                  android:layout_gravity="center"
                  android:gravity="center|right"
                  android:textColor="@color/button_color_orange_p"
                  android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/line_orange"
                   android:padding="8dp"
                   android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:text="忘记密码"
                  android:layout_weight="1"
                  android:id="@+id/forgetpwr"
                  android:padding="8dp"
                  android:layout_gravity="center"
                  android:gravity="center|left"
                  android:textColor="@color/button_color_orange_p"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>